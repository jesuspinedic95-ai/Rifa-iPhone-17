<guion>
  // URL de tu App Script (modo POST)
  const API_URL = "https://script.google.com/macros/s/AKfycbyP-a4EUepQ5J9y9-_3eiJapZuQMc4M6-KnPX2sx5hUH2NwLJFoNxN8YSEhpdgFIVnX/exec";

 comprobación de función() {
    const code = document.getElementById("codigo").value.trim();
    const resultBox = document.getElementById("resultado");

 if (código === "") {
      resultBox.innerHTML = "Ingresa un código.";
 devolución;
    }

    resultBox.innerHTML = "Verificando...";

    fetch(API_URL, {
 método: "POST",
 encabezados: { "Content-Type": "application/json" },
      body: JSON.stringify({ codigo: code })
    })
    .then(res => res.json())
    .then(data => {
 console.log(datos);

      if (data.status === "ok") {
        resultBox.innerHTML = <b>¡Premio encontrado!</b><br>Premio: ${data.premio};
      } 
 si no (data.status === "usado") {
        resultBox.innerHTML = <span style="color:red;"><b>Este código ya fue canjeado</b></span>;
      }
      else if (data.status === "no_existe") {
        resultBox.innerHTML = <span style="color:red;">Código no encontrado</span>;
      }
      else {
        resultBox.innerHTML = "Error desconocido.";
      }
    })
    .catch(err => {
      resultBox.innerHTML = "Error al conectar con el servidor.";
    });
  }
